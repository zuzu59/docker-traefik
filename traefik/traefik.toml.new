#---------------------------------------------------------
# Service logs (here debug mode)
#---------------------------------------------------------
logLevel = "DEBUG"

[traefikLog]
    filePath = "/var/log/traefik/traefik.log"


#---------------------------------------------------------
# Configuration file
#---------------------------------------------------------
[file]
    filename = "/etc/traefik/traefik.toml"
    watch = true


#---------------------------------------------------------
# Entrypoints
#---------------------------------------------------------
[entryPoints]
    [entryPoints.http]
    address = ":80"
        [entryPoints.http.redirect]
        entryPoint = "https"

    [entryPoints.https]
    address = ":443"
        [entryPoints.https.tls]

    [entryPoints.dash]
    address = ":8080"



#---------------------------------------------------------
# Admin dashboard
#---------------------------------------------------------
[api]
    entryPoint = "dash"
    dashboard = true




#---------------------------------------------------------
# Enable ACME (Let's Encrypt): automatic SSL.
#---------------------------------------------------------
[acme]
    email = "christian.zufferey+traefik_paris1@epfl.ch"
    storage = "/etc/traefik/acme.json"
    acmeLogging = true
    onDemand = false
    onHostRule = true
#    caServer = "https://acme-v02.api.letsencrypt.org/directory"
    caServer = "https://acme-staging-v02.api.letsencrypt.org/directory"
    entryPoint = "https"

    [acme.tlsChallenge]
        entryPoint = "http"

[[acme.domains]]
    main = "idev-fsd.ml"
    sans = ["traefik.idev-fsd.ml"]
    sans = ["ressenti-paris.idev-fsd.ml"]












#---------------------------------------------------------
# Backends rules
#---------------------------------------------------------
[backends]
    #-----------------------------------------------------
    # Dashboard traefik
    #-----------------------------------------------------
    [backends.backend_dash]
        [backends.backend_dash.servers.server0]
        url = "http://proxy:8080"


    #-----------------------------------------------------
    # Site0
    #-----------------------------------------------------
    [backends.backend0]
        [backends.backend0.servers.server0]
        url = "http://ressenti-paris.idev-fsd.ml:5000"


    #-----------------------------------------------------
    # Site1
    #-----------------------------------------------------
    [backends.backend1]
        [backends.backend1.servers.server0]
        url = "http://lighttpd:80"





#---------------------------------------------------------
# Frontends rules
#---------------------------------------------------------
[frontends]
    #-----------------------------------------------------
    # Dashboard traefik redirection
    #-----------------------------------------------------
    [frontends.frontend_dash]
    entryPoints = ["http", "https"]
    backend = "backend_dash"
        [frontends.frontend_dash.routes.route0]
        rule = "Host:traefik-ressenti-paris.idev-fsd.ml"
        [frontends.frontend_dash.auth.basic]
        usersfile = "/etc/traefik/.htpasswd"


    #-----------------------------------------------------
    # Site0 redirection
    #-----------------------------------------------------
    [frontends.frontend0]
    entryPoints = ["http", "https"]
    backend = "backend0"
    passHostHeader = true
        [frontends.frontend0.routes.route0]
        rule = "Host:ressenti-paris.idev-fsd.ml"
        [frontends.frontend0.auth.basic]
        usersfile = "/etc/traefik/.htpasswd"


    #-----------------------------------------------------
    # Site1 redirection
    #-----------------------------------------------------
    [frontends.frontend1]
    entryPoints = ["http", "https"]
    backend = "backend1"
    passHostHeader = true
        [frontends.frontend1.routes.route0]
        rule = "Host:www.idev-fsd.ml"

