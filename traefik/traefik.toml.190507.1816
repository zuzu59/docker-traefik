#---------------------------------------------------------
# Service logs (here debug mode)
#---------------------------------------------------------
logLevel = "DEBUG"

[traefikLog]
    filePath = "/var/log/traefik/traefik.log"


#---------------------------------------------------------
# Configuration file
#---------------------------------------------------------
[file]
    filename = "/etc/traefik/traefik.toml"
    watch = true


#---------------------------------------------------------
# Entrypoints
#---------------------------------------------------------
[entryPoints]
    [entryPoints.http]
    address = ":80"
        [entryPoints.http.redirect]
        entryPoint = "https"

    [entryPoints.https]
    address = ":443"
        [entryPoints.https.tls]

    [entryPoints.dash]
    address = ":8080"
#        [entryPoints.dash.auth]
#            [entryPoints.dash.auth.basic]
#            usersFile = "/etc/traefik/.htpasswd"




#---------------------------------------------------------
# Admin dashboard
#---------------------------------------------------------
[api]
    entryPoint = "dash"
    dashboard = true


#---------------------------------------------------------
# Enable ACME (Let's Encrypt): automatic SSL.
#---------------------------------------------------------
[acme]
    email = "sdfepfl+traefikAcme@gmail.com"
    storage = "/etc/traefik/acme.json"
    acmeLogging = true
    onDemand = false
    onHostRule = true
#    caServer = "https://acme-v02.api.letsencrypt.org/directory"
    caServer = "https://acme-staging-v02.api.letsencrypt.org/directory"
    entryPoint = "https"

    [acme.tlsChallenge]
        entryPoint = "http"

[[acme.domains]]
    main = "tests-traefik.ml"
    sans = ["traefik.tests-traefik.ml"]

[[acme.domains]]
    main = "tests-traefik.ml"
    sans = ["site1.tests-traefik.ml"]
[[acme.domains]]
    main = "tests-traefik.ml"
    sans = ["site2.tests-traefik.ml"]
[[acme.domains]]
    main = "tests-traefik.ml"
    sans = ["site3.tests-traefik.ml"]
[[acme.domains]]
    main = "tests-traefik.ml"
    sans = ["site4.tests-traefik.ml"]

[[acme.domains]]
    main = "tests-traefik.ml"
    sans = ["db1.tests-traefik.ml"]
[[acme.domains]]
    main = "tests-traefik.ml"
    sans = ["db2.tests-traefik.ml"]
[[acme.domains]]
    main = "tests-traefik.ml"
    sans = ["db3.tests-traefik.ml"]
[[acme.domains]]
    main = "tests-traefik.ml"
    sans = ["db4.tests-traefik.ml"]



