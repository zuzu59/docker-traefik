#---------------------------------------------------------
# Configuration file
#---------------------------------------------------------
[file]
    filename = "/etc/traefik/traefik.toml"
    watch = true



#---------------------------------------------------------
# Access log
#---------------------------------------------------------
filePath = "/var/log/traefik/access.log"
format = "common"



#---------------------------------------------------------
# Service logs (here debug mode)
#---------------------------------------------------------
logLevel = "DEBUG"

[traefikLog]
    filePath = "/var/log/traefik/traefik.log"



#---------------------------------------------------------
# Entrypoints
#---------------------------------------------------------
[entryPoints]
    [entryPoints.http]
    address = ":80"
#        [entryPoints.http.auth]
#            [entryPoints.http.auth.basic]
#            usersFile = "/etc/traefik/.htpasswd"



    [entryPoints.dash]
    address = ":8080"
#        [entryPoints.dash.auth]
#            [entryPoints.dash.auth.basic]
#            usersFile = "/etc/traefik/.htpasswd"



#---------------------------------------------------------
# Admin dashboard
#---------------------------------------------------------
[api]
    entryPoint = "dash"
    dashboard = true



#---------------------------------------------------------
# Backends rules
#---------------------------------------------------------
[backends]
    #-----------------------------------------------------
    # Dashboard traefik
    #-----------------------------------------------------
    [backends.backend_dash]
        [backends.backend_dash.servers.server0]
        url = "http://proxy:8080"


    #-----------------------------------------------------
    # Site0
    #-----------------------------------------------------
    [backends.backend0]
        [backends.backend0.servers.server0]
        url = "http://ressenti-paris.idev-fsd.ml:5000"


    #-----------------------------------------------------
    # Site1
    #-----------------------------------------------------
    [backends.backend1]
        [backends.backend1.servers.server0]
        url = "http://lighttpd:80"





#---------------------------------------------------------
# Frontends rules
#---------------------------------------------------------
[frontends]
    #-----------------------------------------------------
    # Dashboard traefik redirection
    #-----------------------------------------------------
    [frontends.frontend_dash]
    entryPoints = ["http", "https"]
    backend = "backend_dash"
        [frontends.frontend_dash.routes.route0]
        rule = "Host:traefik-ressenti-paris.idev-fsd.ml"
        [frontends.frontend_dash.auth.basic]
        usersfile = "/etc/traefik/.htpasswd"


    #-----------------------------------------------------
    # Site0 redirection
    #-----------------------------------------------------
    [frontends.frontend0]
    entryPoints = ["http", "https"]
    backend = "backend0"
    passHostHeader = true
        [frontends.frontend0.routes.route0]
        rule = "Host:ressenti-paris.idev-fsd.ml"
        [frontends.frontend0.auth.basic]
        usersfile = "/etc/traefik/.htpasswd"


    #-----------------------------------------------------
    # Site1 redirection
    #-----------------------------------------------------
    [frontends.frontend1]
    entryPoints = ["http", "https"]
    backend = "backend1"
    passHostHeader = true
        [frontends.frontend1.routes.route0]
        rule = "Host:www.idev-fsd.ml"

